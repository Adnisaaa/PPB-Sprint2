<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fiturtiktem">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ectangle638"
        android:layout_marginTop="13dp">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="13dp"
        android:background="@drawable/borderbg">

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tiktem"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/contactAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_margin="13dp"
            android:text="(Rumah Moodcare) \nJl. abcde, No. 17, Rt. 03, Rw. 04, Purwokerto Selatan, Jawa Tengah, Banyumas."
            android:textSize="24sp" />

        <Button
            android:id="@+id/temuiButton"
            android:layout_width="90dp"
            android:layout_height="38dp"
            android:layout_margin="13dp"
            android:text="Temui"
            android:backgroundTint="@color/btnpress"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
